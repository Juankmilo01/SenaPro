@model IEnumerable<Senalai.Models.Ambientes>

@{
    ViewBag.Title = "Index";
}

<h2 style=" text-align:center">AMBIENTES</h2>

<p>
    @Html.ActionLink("Nuevo Ambiente", "Create", null, new { @class = "btn btn-warning" })
</p>
<table class="table table-light table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estado_Ambientes.Nombre_Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_Ambiente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
                     <th>Acciones</th>
        </tr>
    </thead>

        @foreach (var item in Model)
        {<tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Estado_Ambientes.Nombre_Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_Ambiente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ubicacion)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.AmbientesID }, new { @class = "btn btn-success" })

            @Html.ActionLink("Detalles", "Details", new { id = item.AmbientesID }, new { @class = "btn btn-info" })
     
            @Html.ActionLink("Borrar", "Delete", new { id = item.AmbientesID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
       </tbody>
        }

</table>
