@model IEnumerable<Senalai.Models.Ciudad>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<p>
    @Html.ActionLink("Registrar Ciudad", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-light table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamento.NombreDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCiudad)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.NombreDepartamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCiudad)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", null, new { id = item.CuidadID }, new { @class = "btn btn-info" }) |
                    @*@Html.ActionLink("Detalles", "Details",null, new { id=item.CuidadID }, new { @class = "btn btn-success" }) |*@
                    @Html.ActionLink("Eliminar", "Delete", null, new { id = item.CuidadID, }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    }

</table>
