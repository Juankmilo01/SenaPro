@model IEnumerable<Senalai.Models.Ciudad>

@{
    ViewBag.Title = "Index";
}

<h2 style=" text-align:center">CIUDADES</h2>

<p>
    @Html.ActionLink("Nueva Ciudad", "Create", null, new { @class = "btn btn-warning" })
</p>
<table class="table table-light table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamento.NombreDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCiudad)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.NombreDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCiudad)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.CuidadID }, new { @class = "btn btn-success" })

                @Html.ActionLink("Detalles", "Details", new { id = item.CuidadID }, new { @class = "btn btn-info" })

                @Html.ActionLink("Borrar", "Delete", new { id = item.CuidadID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    </tbody>
            }

    </table>
