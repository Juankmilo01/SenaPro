                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Fecha_Realizacion)
        </td>*@

                <td>
                    @Html.ActionLink("Editar", "Edit", null, new { id = item.NovedadesID}, new { @class = "btn btn-info" }) |
