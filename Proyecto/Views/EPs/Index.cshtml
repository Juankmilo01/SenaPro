@model IEnumerable<Senalai.Models.EP>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<p>
    @Html.ActionLink("Registrar EP", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-light table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Elementos.Numero_Serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prestamos.Estado_Disposicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado_Entrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Inicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Final)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Elementos.Numero_Serial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prestamos.Estado_Disposicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado_Entrega)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Inicial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Final)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", null, new { id = item.EPID }, new { @class = "btn btn-info" }) |
                    @*@Html.ActionLink("Detalles", "Details",null, new { id=item.EPID }, new { @class = "btn btn-success" }) |*@
                    @Html.ActionLink("Eliminar", "Delete", null, new { id = item.EPID, }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    }

</table>
