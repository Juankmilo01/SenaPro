@model IEnumerable<Senalai.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreDepartamento)
        </th>
        <th></th><th>Acciones</th><th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreDepartamento)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.DepartamentoID }, new { @class = "btn btn-success" })
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.DepartamentoID }, new { @class = "btn btn-info" })
        </td>
        <td>
            @Html.ActionLink("Borrar", "Delete", new { id = item.DepartamentoID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
